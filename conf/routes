# Home page
GET         /                                                     controllers.Orga.index
GET         /ligues                                               controllers.Orga.ligues

# Contact
GET         /contacts                                             controllers.Contact.contact

# Event
GET         /events                                               controllers.Event.event
GET         /events/list                                          controllers.Event.eventsList
GET         /events/calendar                                      controllers.Event.eventsCalendar

# Ligue, Comite, Club
GET         /ligues/:ligue                                        controllers.Orga.ligue(ligue)
GET         /ligues/:ligue/body                                   controllers.Orga.ligueBody(ligue)
GET         /ligues/:ligue/comites/:comite                        controllers.Orga.comite(ligue,comite )
GET         /ligues/:ligue/comites/:comite/body                   controllers.Orga.comiteBody(ligue,comite )
GET         /ligues/:ligue/comites/:comite/clubs/:club            controllers.Orga.club(ligue, comite, club)

# Ligue Rank
GET         /ligues/:ligue/single                                 controllers.Ranking.ligueSingle(ligue)
GET         /ligues/:ligue/single.pdf                             controllers.Ranking.ligueSinglePDF(ligue)
GET         /ligues/:ligue/ladies                                 controllers.Ranking.ligueLadies(ligue)
GET         /ligues/:ligue/ladies.pdf                             controllers.Ranking.ligueLadiesPDF(ligue)
GET         /ligues/:ligue/youth                                  controllers.Ranking.ligueYouth(ligue)
GET         /ligues/:ligue/youth.pdf                              controllers.Ranking.ligueYouthPDF(ligue)
GET         /ligues/:ligue/pairs                                  controllers.Ranking.liguePairs(ligue)
GET         /ligues/:ligue/pairs.pdf                              controllers.Ranking.liguePairsPDF(ligue)
GET         /ligues/:ligue/team                                   controllers.Ranking.ligueTeam(ligue)
GET         /ligues/:ligue/team.pdf                               controllers.Ranking.ligueTeamPDF(ligue)

# Comite Rank
GET         /ligues/:ligue/comites/:comite/single                 controllers.Ranking.comiteSingle(ligue, comite)
GET         /ligues/:ligue/comites/:comite/single.pdf             controllers.Ranking.comiteSinglePDF(ligue, comite)
GET         /ligues/:ligue/comites/:comite/ladies                 controllers.Ranking.comiteLadies(ligue, comite)
GET         /ligues/:ligue/comites/:comite/ladies.pdf             controllers.Ranking.comiteLadiesPDF(ligue, comite)
GET         /ligues/:ligue/comites/:comite/youth                  controllers.Ranking.comiteYouth(ligue, comite)
GET         /ligues/:ligue/comites/:comite/youth.pdf              controllers.Ranking.comiteYouthPDF(ligue, comite)
GET         /ligues/:ligue/comites/:comite/pairs                  controllers.Ranking.comitePairs(ligue, comite)
GET         /ligues/:ligue/comites/:comite/pairs.pdf              controllers.Ranking.comitePairsPDF(ligue, comite)
GET         /ligues/:ligue/comites/:comite/team                   controllers.Ranking.comiteTeam(ligue, comite)
GET         /ligues/:ligue/comites/:comite/team.pdf               controllers.Ranking.comiteTeamPDF(ligue, comite)

# Tournament
GET         /ligues/:ligue/tour/:tour                             controllers.Orga.ligueTournament(ligue, tour)
GET         /ligues/:ligue/comites/:comite/tour/:tour             controllers.Orga.comiteTournament(ligue, comite, tour)

# Team Championship
GET         /ligues/:ligue/team/day/:day/:team1/:team2            controllers.Detail.team(ligue,day:Int,team1,team2)
GET         /ligues/:ligue/team/day/:day/:team1/:team2/pdf        controllers.Detail.teamPDF(ligue,day:Int,team1,team2)
POST        /ligues/:ligue/team/result                            controllers.Detail.result(ligue)

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                                         controllers.Assets.at(path="/public", file)

# ~~~~~~~~~~~~~~~~~~~~~~~~~~~~
# Authentication Secure Social

# Login page
GET         /login                                                securesocial.controllers.LoginPage.login
GET         /logout                                               securesocial.controllers.LoginPage.logout

# User Registration and password handling
GET         /signup                                               securesocial.controllers.Registration.startSignUp
POST        /signup                                               securesocial.controllers.Registration.handleStartSignUp
GET         /signup/:token                                        securesocial.controllers.Registration.signUp(token)
POST        /signup/:token                                        securesocial.controllers.Registration.handleSignUp(token)
GET         /reset                                                securesocial.controllers.Registration.startResetPassword
POST        /reset                                                securesocial.controllers.Registration.handleStartResetPassword
GET         /reset/:token                                         securesocial.controllers.Registration.resetPassword(token)
POST        /reset/:token                                         securesocial.controllers.Registration.handleResetPassword(token)
GET         /password                                             securesocial.controllers.PasswordChange.page
POST        /password                                             securesocial.controllers.PasswordChange.handlePasswordChange

# Providers entry points
GET         /authenticate/:provider                               securesocial.controllers.ProviderController.authenticate(provider)
POST        /authenticate/:provider                               securesocial.controllers.ProviderController.authenticateByPost(provider)
GET         /not-authorized                                       securesocial.controllers.ProviderController.notAuthorized
