<configuration>

    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>${application.home}/logs/application.log</file>
        <encoder>
            <pattern>%date - [%level] - from %logger in %thread %n%message%n%xException%n</pattern>
        </encoder>
    </appender>

    <logger name="play" level="WARN"/>
    <logger name="application" level="WARN"/>

    <logger name="loading" level="WARN"/>
    <logger name="YAML" level="WARN"/>
    <logger name="data" level="WARN"/>

    <logger name="UserService" level="INFO"/>
    <logger name="user" level="DEBUG"/>
    <logger name="AuthEventListener" level="TRACE"/>
    <logger name="Mailer" level="TRACE"/>

    <root level="ERROR">
        <appender-ref ref="FILE"/>
    </root>

</configuration>
